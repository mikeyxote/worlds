<% if user_signed_in? %>

  <h1>Jersey Tracking</h1>
  <% if current_user.has_strava? %>
    <h3>Greetings <%= current_user.firstname %>!</h3>
    <% if @managing.size > 1 %>
      <h2>Your roster: <%= pluralize(@managing.count, 'rider') %></h2>
    <% else %> Looks like you aren't managing anyone </br>
                Try heading to the <strong><%= link_to "Users Page", users_path %></strong>, click on a profile </br>
                and add them to your roster with the 'Manage' button.
    <% end %>
    <h3>Recent Events:</h3>
    <% if @events.size > 1 %>
      <table class="table table-striped">
        <thead>
          <th>Event Name</th>
          <th>Points</th>
          <th>Date</th>
        </thead>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.points.where(user: current_user).sum(:val) %></td>
            <td><%= event.start_date.to_date %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      Looks like you aren't a participant in any Events.  Try and create one <%= link_to "HERE!", events_path %>
    <% end %>
    <% if current_user.activities.count > 0 %>
      <h2>Activity count <%= current_user.activities.count %></h2>
    <% else %>
      <h2>Looks like you don't have any activities downloaded.  Start by loading some <%= link_to "HERE!", current_user %></h2>
    <% end %>
    <h2>You are a member of <%= pluralize(current_user.managers.count.to_s, 'team') %>.</h2>
    <h2>Effort count <%= current_user.efforts.count %></h2>
    <h2>Unique Segments: <%= current_user.efforts.group(:segment_id).count.size %></h2>
  <% else %>
    <h2>Connect with Strava here:</h2>
    <h1><%= link_to 'Strava', strava_request_path %></h1>
  <% end %>
<% else %>

  <div class="center jumbotron">
    <h1>Welcome to the Davidsonville Jersey Tracker!</h1>

    <h2>
      This is the home page for Strava users who want to track their progress 
      on the regular rides that leave out of Davidsonville.
    </h2>

    <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>