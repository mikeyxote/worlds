<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Start date</th>
      <th>Segment</th>
      <th>Participants</th>
      <th>Segments</th>
      <th>Efforts</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= link_to event.owner.full_name, event.owner %></td>
        <% if event.start_date %>
          <td><%= Time.at(event.start_date).strftime('%a, %d %b, %H:%M:%S')  %></td>
        <% else %>
          <td>Pending...</td>
        <% end %>
        <% if event.segment %>
          <td><%= link_to event.segment.name, event.segment %></td>
        <% else %>
          <td>No Segment</td>
        <% end %>
        <td><%= event.users.size.to_s %></td>
        <td><%= event.featuring.count %></td>
        <td><%= event.efforts.count %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Create Event', new_event_path, {class: 'btn-success'} %>

<h3>Suggested Event Days:</h3>
<table>
  <thead>
  <tr>
    <th>Date</th>
    <th>Active Athletes</th>
  </tr>
  </thead>
  
  <body>
    <% @recommends.each do |r| %>
    <tr>
      <td><%= r[0].strftime('%a, %d %b') %></td>
      <td><%= r[1] %></td>
    </tr>
    <% end %>
  </body>
</table>