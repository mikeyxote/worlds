<p id="notice"><%= notice %></p>

<p>
  <strong>Event Name:</strong>
  <%= @event.name %></br>
  Started at:
  <% if @event.start_date %>
     <%= Time.at(@event.start_date).strftime('%H:%M:%S') %></br>
  <% else %>
    Pending...
  <% end %>
</p>
<p>
  <strong>Participants:</strong>
  <%= @event.activities.pluck(:user_id).uniq.size.to_s %>
</p>

<p>
  <strong>Activities:</strong>
  <%= @event.activities.count.to_s %>
</p>
  
<p>
  Tracks:</br>
  <% @tracks.each do |track| %>
    <%= track.name %></br>
    <% track.efforts.each do |effort| %>
      -----------------</br>
      <%= Segment.find_by(strava_id: effort.segment_id).name %>:
      <%= Time.at(effort.start_date + effort.elapsed_time).strftime('%H:%M:%S') %></br>
    <% end %>
  
  <% end %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %>
<%= link_to 'Back', events_path %>