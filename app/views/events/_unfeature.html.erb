<div class="unfeature-form">
  <%= @event.featured_segments.find_by(segment_id: segment_id).val %>
  <%= image_tag cat_icon(@event.featured_segments.find_by(segment_id: segment_id).category) %>
  <%= form_for(@event.featured_segments.find_by(segment_id: segment_id),
               html: { method: :delete },
               remote: true) do |f| %>
   <div><%= hidden_field_tag :segment_id, segment_id %></div>
   <div><%= hidden_field_tag :event_id, @event.id %></div>
    <%= f.submit "Remove", class: "btn" %>
  <% end %>
</div>