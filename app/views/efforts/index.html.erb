<p id="notice"><%= notice %></p>

<h1>Efforts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Segment</th>
      <th>Start date</th>
      <th>Elapsed time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @efforts.each do |effort| %>
      <tr>
        <td><%= image_tag User.find_by(id: effort.user_id).profile_medium %></td>
        <td><%= Segment.find_by(strava_id: effort.segment_id).name %></td>
        <td><%= Time.at(effort.start_date).strftime("%H:%M:%S") %></td>
        <td><%= Time.at(effort.elapsed_time).strftime("%M:%S") %></td>
        <td><%= link_to 'Show', effort %></td>
        <td><%= link_to 'Edit', edit_effort_path(effort) %></td>
        <td><%= link_to 'Destroy', effort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

