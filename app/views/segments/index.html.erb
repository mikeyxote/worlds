<p id="notice"><%= notice %></p>

<h1>Listing Segments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Climb Category</th>
      <th>Max Grade</th>
      <th>Average Grade</th>
      <th>Star Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @segments.each do |segment| %>
      <tr>
        <td><%= segment.name %></td>
        <td><%= segment.points %></td>
        <td><%= segment.climb_category %></td>
        <td><%= segment.max_grade %></td>
        <td><%= segment.average_grade %></td>
        <td><%= segment.star_count %></td>
        <td><%= link_to 'Show', segment %></td>
        <td><%= link_to 'Edit', edit_segment_path(segment) %></td>
        <td><%= link_to 'Destroy', segment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

